<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3AA9E6"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@+id/action_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/edit_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@drawable/ic_baseline_format_align_right_24"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/city_name"
            tools:text="Toshkent"
            android:textColor="@color/white"
            android:fontFamily="@font/din_next_slab"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/change_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_edit_location_24"
            android:layout_gravity="center|end"/>
    </FrameLayout>
   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:id="@+id/swipe_layout"
       android:layout_width="match_parent"
       app:layout_constraintTop_toBottomOf="@id/action_bar"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_height="0dp">
       <androidx.core.widget.NestedScrollView
           android:id="@+id/scrollView"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <androidx.cardview.widget.CardView
                   android:id="@+id/current_weather"
                   app:layout_constraintTop_toTopOf="parent"
                   app:cardBackgroundColor="#7C252525"
                   android:layout_marginTop="30dp"
                   android:layout_marginHorizontal="7dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/date"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/temperature"
                           app:layout_constraintBottom_toTopOf="@id/time"
                           app:layout_constraintEnd_toStartOf="@id/temperature"
                           app:layout_constraintStart_toStartOf="parent"
                           tools:text="Mon Aug 22,2022"
                           android:textColor="@color/white"
                           android:textSize="18sp"
                           android:fontFamily="@font/din_next_slab" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/time"
                           app:layout_constraintTop_toBottomOf="@id/date"
                           app:layout_constraintStart_toStartOf="@id/date"
                           app:layout_constraintEnd_toEndOf="@id/date"
                           app:layout_constraintBottom_toBottomOf="@id/temperature"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="09:04"
                           android:textSize="34sp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/temperature"
                           android:layout_marginTop="20dp"
                           android:layout_marginBottom="10dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintStart_toEndOf="@id/date"
                           app:layout_constraintEnd_toStartOf="@id/image"
                           app:layout_constraintBottom_toTopOf="@id/minStr"
                           android:fontFamily="@font/din_next_slab"
                           android:textSize="60sp"
                           android:textColor="@color/white"
                           tools:text="19"/>
                       <TextView
                           android:id="@+id/celsius"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           app:layout_constraintTop_toTopOf="@id/temperature"
                           app:layout_constraintStart_toEndOf="@id/temperature"
                           android:fontFamily="@font/din_next_slab"
                           android:textColor="@color/white"
                           android:text="°C"/>
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:id="@+id/image"
                           app:layout_constraintBottom_toTopOf="@id/description"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toEndOf="@id/temperature"
                           app:layout_constraintTop_toTopOf="@id/temperature"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/description"
                           android:layout_marginTop="5dp"
                           android:textSize="16sp"
                           app:layout_constraintTop_toBottomOf="@id/image"
                           app:layout_constraintBottom_toBottomOf="@id/temperature"
                           app:layout_constraintStart_toStartOf="@id/image"
                           app:layout_constraintEnd_toEndOf="@id/image"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="clear sky"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/minStr"
                           android:textSize="18sp"
                           app:layout_constraintHorizontal_chainStyle="packed"
                           app:layout_constraintTop_toBottomOf="@id/temperature"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintEnd_toStartOf="@id/maxStr"
                           app:layout_constraintBottom_toTopOf="@id/windStr"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Min: "/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/min"
                           android:textSize="18sp"
                           android:fontFamily="@font/din_next_slab"
                           app:layout_constraintTop_toTopOf="@id/minStr"
                           app:layout_constraintBottom_toBottomOf="@id/minStr"
                           app:layout_constraintStart_toEndOf="@id/minStr"
                           tools:text="19"
                           android:textColor="@color/white" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/min"
                           app:layout_constraintTop_toTopOf="@id/min"
                           android:textColor="@color/white"
                           android:textSize="18sp"
                           android:fontFamily="@font/din_next_slab"
                           android:text="°"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/minStr"
                           app:layout_constraintBottom_toBottomOf="@id/minStr"
                           app:layout_constraintStart_toEndOf="@id/minStr"
                           app:layout_constraintEnd_toEndOf="parent"
                           android:fontFamily="@font/din_next_slab"
                           android:layout_marginStart="50dp"
                           android:textSize="18sp"
                           android:id="@+id/maxStr"
                           android:textColor="@color/white"
                           android:text="Max: "/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/max"
                           android:textSize="18sp"
                           android:fontFamily="@font/din_next_slab"
                           app:layout_constraintTop_toTopOf="@id/maxStr"
                           app:layout_constraintBottom_toBottomOf="@id/maxStr"
                           app:layout_constraintStart_toEndOf="@id/maxStr"
                           tools:text="32"
                           android:textColor="@color/white"/>
                       <TextView
                           android:id="@+id/maxEnd"
                           android:textSize="18sp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/max"
                           app:layout_constraintTop_toTopOf="@id/max"
                           android:textColor="@color/white"
                           android:text="°"
                           android:fontFamily="@font/din_next_slab"/>
                       <TextView
                           android:id="@+id/windStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="18sp"
                           app:layout_constraintTop_toBottomOf="@id/minStr"
                           app:layout_constraintStart_toStartOf="@id/minStr"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toStartOf="@id/wind"
                           android:layout_marginVertical="5dp"
                           android:text="Wind: "
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"/>
                       <TextView
                           android:id="@+id/wind"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="18sp"
                           app:layout_constraintTop_toTopOf="@id/windStr"
                           app:layout_constraintBottom_toBottomOf="@id/windStr"
                           app:layout_constraintStart_toEndOf="@id/windStr"
                           app:layout_constraintEnd_toEndOf="@id/maxEnd"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="South 9 km/h"/>



                   </androidx.constraintlayout.widget.ConstraintLayout>


               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:id="@+id/forecast"
                   app:layout_constraintTop_toBottomOf="@id/current_weather"
                   android:layout_marginTop="7dp"
                   android:clickable="false"
                   android:layout_marginHorizontal="7dp"
                   app:cardBackgroundColor="#7C252525"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/forecastList"
                           app:layout_constraintTop_toTopOf="parent"
                           android:layout_width="match_parent"
                           android:layout_marginStart="10dp"
                           android:layout_height="wrap_content">

                       </androidx.recyclerview.widget.RecyclerView>
                   </androidx.constraintlayout.widget.ConstraintLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   app:layout_constraintTop_toBottomOf="@id/forecast"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="7dp"
                   android:layout_marginBottom="15dp"
                   android:layout_marginHorizontal="7dp"
                   app:cardBackgroundColor="#7C252525"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:id="@+id/detail_image"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="15dp"/>
                       <TextView
                           android:id="@+id/humidityStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Humidity: "/>
                       <TextView
                           android:id="@+id/pressureStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/humidityStr"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Pressure: "/>
                       <TextView
                           android:id="@+id/feelsLikeStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/pressureStr"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Feels like: "/>
                       <TextView
                           android:id="@+id/CloudCoverStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/feelsLikeStr"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Cloud cover: "/>
                       <TextView
                           android:id="@+id/windSpeedStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/CloudCoverStr"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Wind speed: "/>
                       <TextView
                           android:id="@+id/sunriseStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/windSpeedStr"
                           android:layout_marginTop="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Sunrise: "/>
                       <TextView
                           android:id="@+id/sunsetStr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintStart_toEndOf="@id/detail_image"
                           app:layout_constraintTop_toBottomOf="@id/sunriseStr"
                           app:layout_constraintBottom_toBottomOf="parent"
                           android:layout_marginTop="7dp"
                           android:layout_marginBottom="7dp"
                           android:layout_marginStart="15dp"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           android:text="Sunset: "/>
                       <TextView
                           android:id="@+id/humidity"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/humidityStr"
                           app:layout_constraintBottom_toBottomOf="@id/humidityStr"
                           app:layout_constraintStart_toEndOf="@id/humidityStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="10%"/>
                       <TextView
                           android:id="@+id/pressure"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/pressureStr"
                           app:layout_constraintBottom_toBottomOf="@id/pressureStr"
                           app:layout_constraintStart_toEndOf="@id/pressureStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="1010 mbar"/>
                       <TextView
                           android:id="@+id/feels_like"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/feelsLikeStr"
                           app:layout_constraintBottom_toBottomOf="@id/feelsLikeStr"
                           app:layout_constraintStart_toEndOf="@id/feelsLikeStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="28"/>
                       <TextView
                           android:id="@+id/cloud_cover"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/CloudCoverStr"
                           app:layout_constraintBottom_toBottomOf="@id/CloudCoverStr"
                           app:layout_constraintStart_toEndOf="@id/CloudCoverStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="1%"/>
                       <TextView
                           android:id="@+id/wind_speed"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/windSpeedStr"
                           app:layout_constraintBottom_toBottomOf="@id/windSpeedStr"
                           app:layout_constraintStart_toEndOf="@id/windSpeedStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="4 k/h"/>
                       <TextView
                           android:id="@+id/sunrise"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/sunriseStr"
                           app:layout_constraintBottom_toBottomOf="@id/sunriseStr"
                           app:layout_constraintStart_toEndOf="@id/sunriseStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="05:30"/>
                       <TextView
                           android:id="@+id/sunset"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:layout_constraintTop_toTopOf="@id/sunsetStr"
                           app:layout_constraintBottom_toBottomOf="@id/sunsetStr"
                           app:layout_constraintStart_toEndOf="@id/sunsetStr"
                           android:textSize="18sp"
                           android:textColor="@color/white"
                           android:fontFamily="@font/din_next_slab"
                           tools:text="19:13"/>

                   </androidx.constraintlayout.widget.ConstraintLayout>

               </androidx.cardview.widget.CardView>
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.core.widget.NestedScrollView>
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</androidx.constraintlayout.widget.ConstraintLayout>