<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#C9000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/text_back"
        tools:text="MON"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/din_next_slab"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/day"
        app:layout_constraintStart_toStartOf="@id/day"
        app:layout_constraintEnd_toEndOf="@id/day"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/rainIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/rainPer"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/day"
        android:background="@drawable/rain"/>
    <TextView
        android:id="@+id/rainPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toEndOf="@id/rainIcon"
        app:layout_constraintBottom_toBottomOf="@id/rainIcon"
        app:layout_constraintEnd_toEndOf="@id/day"
        android:layout_marginStart="7dp"
        tools:text="0%"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/din_next_slab"/>
    <TextView
        android:id="@+id/max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/white"
        tools:text="32"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/din_next_slab"
        app:layout_constraintBottom_toTopOf="@id/diagramm"
        app:layout_constraintStart_toStartOf="@id/day"
        app:layout_constraintEnd_toStartOf="@id/celsius2"/>
    <TextView
        android:id="@+id/celsius2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="°"
        app:layout_constraintTop_toTopOf="@id/max"
        app:layout_constraintStart_toEndOf="@id/max"
        app:layout_constraintEnd_toEndOf="@id/day"
        android:fontFamily="@font/din_next_slab"/>
    <TextView
        android:id="@+id/diagramm"
        android:layout_width="8dp"
        android:layout_height="160dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/diagramm_back"
        app:layout_constraintStart_toStartOf="@id/day"
        app:layout_constraintEnd_toEndOf="@id/day"
        app:layout_constraintBottom_toTopOf="@id/min"/>
    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/day"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/celsius1"
        tools:text="16"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/din_next_slab"/>
    <TextView
        android:id="@+id/celsius1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/din_next_slab"
        android:textSize="18sp"
        android:text="°"
        app:layout_constraintStart_toEndOf="@id/min"
        app:layout_constraintTop_toTopOf="@id/min"
        app:layout_constraintEnd_toEndOf="@id/day"/>





</androidx.constraintlayout.widget.ConstraintLayout>